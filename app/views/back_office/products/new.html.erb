<div class="mx-auto md:w-2/3 w-full">
  <div class="flex justify-between">
    <h1 class="font-bold text-4xl">New product</h1>
    <%= link_to "Back to products", products_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
  </div>
  <% if current_user.products.count == 0 %>
    <div class="bg-gray-200 rounded-lg mt-4">
      <p class="p-3 text-gray-700 text-sm">This is just an example, change the data to your convinience or proceed to perform a simple test.</p>
    </div>
  <% end %>
  <%= render "form", product: @product %>
</div>
