<div class="flex flex-col items-center mx-auto max-w-4xl text-center mb-12 space-y-20">
  <div class="space-y-8 items-center flex flex-col">
    <%= render "home/headline" %>
    <%= render "home/cta", text: "Collect reviews" %>
  </div>
  <div class="text-left">
    <h2 class="text-3xl text-center font-bold leading-2 mb-8">Use cases:</h2>
    <%-
     use_cases = [
      {title: "Indie makers", description: "No need to code anything for the integration. Just add the public link to a button in your app or simply send an email to your customers for feedback."},
      {title: "Skool communities", description: "Create a new post in your community with the public link and let your members give a review!"},
      {title: "Info products", description: "Drop the public link and let us do the work."}
     ]
    -%>
    <div class="flex max-w-[600px] flex-col gap-3">
      <% use_cases.each_with_index do |el, idx| %>
        <div class="rounded-md bg-zinc-800 p-6">
          <div class="text-lg font-semibold text-zinc-100"><%= idx + 1 %>. <%= el[:title] %></div>
          <div class="text-zinc-400"><%= el[:description] %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
